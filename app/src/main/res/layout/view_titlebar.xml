<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titlebar_color"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/titlebar_tv_left"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:background="@drawable/editbg"
        android:drawableLeft="@drawable/ic_titlebar_left_24dp"
        android:gravity="left|center"
        android:text="返回"
        android:textColor="@color/titlebar_text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/titlebar_tv_center"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/editbg"
        android:gravity="center"
        android:textColor="@color/titlebar_text_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titlebar_tv_right"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:background="@drawable/editbg"
        android:drawableRight="@drawable/ic_titlebar_right_more_24dp"
        android:gravity="right|center"
        android:text="更多"
        android:textColor="@color/titlebar_text_color"
        android:textSize="16sp" />

</LinearLayout>